# Ultra-Cost-Optimized All-in-One TGE Swarm Container
# Runs Queen, Coordinator, and all Agents in a single container
# Cost Optimization Engineer: Claude

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (minimal)
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    netcat-traditional \
    procps \
    supervisor \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create app user
RUN useradd -m -s /bin/bash appuser

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src/ ./src/
COPY config.py .
COPY swarm-agents/ ./swarm-agents/

# Copy configuration files
COPY swarm-agents/lowest_possible_cost_aws/config/ ./config/

# Create necessary directories
RUN mkdir -p /app/logs /app/reports /app/safla-memory /app/backups \
    && chown -R appuser:appuser /app

# Copy supervisor configuration
COPY swarm-agents/lowest_possible_cost_aws/docker/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Copy startup script
COPY swarm-agents/lowest_possible_cost_aws/scripts/start-all-services.sh /app/start-all-services.sh
RUN chmod +x /app/start-all-services.sh

# Health check script
COPY swarm-agents/lowest_possible_cost_aws/scripts/health-check.sh /app/health-check.sh
RUN chmod +x /app/health-check.sh

# Cost optimization script
COPY swarm-agents/lowest_possible_cost_aws/scripts/cost-optimizer.py /app/cost-optimizer.py

# Set ownership
RUN chown -R appuser:appuser /app

# Expose ports
EXPOSE 8080 8001 8002

# Switch to app user
USER appuser

# Health check
HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=3 \
    CMD /app/health-check.sh

# Start all services using supervisor
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]