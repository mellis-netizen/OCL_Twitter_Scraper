# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

aws_region     = "us-east-1"
instance_type  = "t3.small"
key_pair_name  = "your-key-pair-name"
email_address  = "your-email@example.com"
repository_url = "https://github.com/mellis-netizen/OCL_Twitter_Scraper.git"
environment    = "production"

# S3 Backup Configuration (Optional)
enable_s3_backup = true              # Set to false to disable S3 backups
s3_bucket_name   = ""               # Leave empty to create new bucket

# Example configurations:

# Minimal deployment (no S3 backups):
# enable_s3_backup = false
# s3_bucket_name   = ""

# Use existing S3 bucket:
# enable_s3_backup = true
# s3_bucket_name   = "my-existing-backup-bucket"

# Create new S3 bucket (default):
# enable_s3_backup = true
# s3_bucket_name   = ""